<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.rover.campaigns.app.debug">

    <application
        android:name="io.rover.campaigns.app.debug.DebugApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- TODO: add RoverActivity from the separate Rover SDK, with appropriate bespoke intent filters for debug/inbox app deep and universal links, which will probably keep the same form as Rover 2.x links -->
        <service android:name="io.rover.campaigns.app.debug.fcm.FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="io.rover.campaigns.app.debug.fcm.FirebaseInstanceIdReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="io.rover.campaigns.app.debug.DebugMainActivity"
            android:label="@string/app_name" android:theme="@style/RoverDebugPreferencesActivityTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>