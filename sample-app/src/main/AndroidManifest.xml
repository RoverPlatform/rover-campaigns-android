<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.rover.campaigns.app.sample">

    <application
        android:name="io.rover.campaigns.app.sample.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!-- TODO: add RoverActivity from the separate Rover SDK, with appropriate bespoke intent filters for debug/inbox app deep and universal links, which will probably keep the same form as Rover 2.x links -->
        <service android:name="io.rover.campaigns.app.sample.fcm.FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="io.rover.campaigns.app.sample.fcm.FirebaseInstanceIdReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="io.rover.campaigns.app.sample.SampleMainActivity"
            android:label="@string/app_name" android:theme="@style/RoverDebugPreferencesActivityTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- for deep links to open experiences -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/uri_scheme" />
            </intent-filter>

            <!-- for http universal links/app links to open experiences  -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" android:host="@string/associated_domain" />
            </intent-filter>

            <!-- for https universal links/app links to open experiences -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" android:host="@string/associated_domain" />
            </intent-filter>
        </activity>

        <activity android:name="io.rover.campaigns.core.routing.TransientLinkLaunchActivity">
            <!-- for deep links to open the Campaigns SDK settings -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/rover_campaigns_uri_scheme" />
                <data android:host="presentSettings" />
            </intent-filter>

            <!-- for deep links to open the Campaigns SDK notification center-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/rover_campaigns_uri_scheme" />
                <data android:host="presentNotificationCenter" />
            </intent-filter>

        </activity>

        <!-- Registering RoverActivity from the Rover SDK in order to display experiences -->
        <activity
            android:name="io.rover.sdk.ui.containers.RoverActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
    </application>

</manifest>